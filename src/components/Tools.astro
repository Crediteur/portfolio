---
// import {Image} from "astro:assets";
import { skills } from "../data/constants";

const { heading } = Astro.props;
---

<div>
  <div class="flex flex-row gap-8 py-8 items-center">
    <h2 class="font-medium text-3xl tracking-wider">{heading}</h2>
    <hr class="line w-[350px]" />
  </div>

  <div class="pt-16 flex flex-row justify-around translate-y-4">
    {
      skills.map((category) => (
        <div class="flex flex-col">
          <ul class="flex flex-col gap-8">
            {category.items.map((item) => (
              <li class="icon-wrapper">
                <img
                  src={item.icon}
                  alt={`${item.name} icon`}
                  height="80"
                  width="80"
                  class="icon rounded-[0.2rem]"
                />
                <p class="icon-name text-center pt-3">{item.name}</p>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</div>

<style>
  .icon {
    transition:
      filter 0.2s ease,
      transform 0.2s ease;
  }
  .icon-name {
    opacity: 0;
    transition: all 0.2s ease;
  }
  .icon-wrapper:hover > .icon-name {
    opacity: 0.9;
  }

  .icon-wrapper:hover .icon {
    transform: translate(-4px, -4px);
    filter: drop-shadow(8px 8px 3px rgba(20, 160, 202, 0.316));
  }
</style>
