import { links } from "../data/constants";
---

<footer>
  <div
    id="contact"
    class="mx-auto max-w-screen-lg p-8">
    <ul class="flex flex-row justify-center items-center gap-10 py-8">
      {
        links.map((link) => (
          <li>
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer">
              <img
                src={link.icon}
                alt={`${link.name} icon`}
                class="social-icon w-10 h-10"
              />
            </a>
          </li>
        ))
      }
    </ul>
    <div class="flex flex-col justify-end text-right">
