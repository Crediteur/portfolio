---
import {links} from "../data/constants";
---

<footer>
  <div class="mx-auto max-w-screen-lg p-8">
    <ul class="flex flex-row justify-center items-center gap-10 py-8">
      {
        links.map((link) => (
          <li>
            <a href={link.url}>
              <img
                src={link.icon}
                alt={`${link.name} icon`}
                class="social-icon w-10 h-10"
              />
            </a>
          </li>
        ))
      }
    </ul>
    <p class="text-right text-sm translate-y-4">
      Â© {new Date().getFullYear()} Tony Yang
    </p>
  </div>
</footer>

<style>
  .social-icon {
    filter: invert(0.7);
    transition: filter 0.2s ease-in-out;
  }
  .social-icon:hover {
    filter: invert(0.9);
  }
</style>
